# Server Configuration
PORT=5001
NODE_ENV=production

# Admin Frontend URLs (for CORS)
ADMIN_FRONTEND_URL_NETLIFY=https://zenthra-admin.netlify.app
CUSTOM_ADMIN_DOMAIN=https://admin.yourdomain.com

# Development Override (only for local development)
# ADMIN_FRONTEND_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=your_postgresql_database_url_here

# MongoDB Atlas Configuration (for media and admin data)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/zenthra?retryWrites=true&w=majority

# Cloudinary Configuration (for media management)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# JWT Configuration
JWT_SECRET=your_very_long_random_jwt_secret_key_here

# Admin Authentication
ADMIN_JWT_SECRET=your_admin_jwt_secret_key_here

# Stripe Configuration (for order management)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here

# 2FA Configuration
TOTP_SECRET=your_2fa_secret_key_here