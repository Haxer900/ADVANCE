# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/morethenfashion
MONGODB_URI=mongodb+srv://username:password@cluster.aws-mumbai.mongodb.net/morethenfashion?retryWrites=true&w=majority

# Cloudinary Configuration (Required for image/media uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# JWT Secrets (REQUIRED - Use different strong random keys in production)
JWT_SECRET=your-super-secret-customer-jwt-key-change-in-production
JWT_SECRET_ADMIN=your-super-secret-admin-jwt-key-change-in-production

# Upload Configuration
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=10

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Payment Gateway Configuration

# Razorpay (Required for INR payments)
RZP_KEY_ID=rzp_test_your_key_id
RZP_KEY_SECRET=your_razorpay_key_secret

# Stripe (Optional - for international payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# PayPal (Optional - for PayPal payments)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Google OAuth2 (Required for Google Sign-In)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret